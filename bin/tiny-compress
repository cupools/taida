#!/usr/bin/env node

var program = require('commander')

program
  .usage('[option]')
  // .option('-p, --pattern <globs...>', 'glob pattern for images filepath to compress')
  .option('-d, --dest <path>', 'directory path to save compressed images')
  .option('    --detail', 'show more detail')
  .parse(process.argv)

// suggest all unexpected args as path pattern
var pattern = program.pattern ? [].concat(program.pattern, program.args) : []
var dest = program.dest
var detail = program.detail

compress({
  pattern: pattern,
  dest: dest,
  detail: detail
})
