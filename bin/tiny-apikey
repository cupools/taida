#!/usr/bin/env node

var program = require('commander')
var PKG = require('../package.json')
var apikey = require('../lib/cmd/apikey').default

program
  .version(PKG.version)
  .usage('<command> [key]')

program
  .command('add <keys ...>')
  .description('add apikeys for usage')
  .action(function (keys) {
    apikey.add(keys)
  })

program
  .command('delete <key>')
  .description('remove apikeys by key string or item index')
  .action(function (keys) {
    apikey.delete(keys)
  })

program
  .command('use <key>')
  .description('suggest specified key to be used first')
  .action(function (key) {
    apikey.use(key)
  })

program
  .command('list')
  .description('show apikeys list')
  .action(function () {
    apikey.list()
  })

program
  .command('edit')
  .description('open .apikeys in editor')
  .action(function () {
    apikey.edit()
  })

program
  .command('supply')
  .description('open http://tinypng.com to supply api key')
  .action(function () {
    apikey.supply()
  })

program
  .command('clear')
  .description('remove all apikeys')
  .action(function () {
    apikey.clear()
  })

program.parse(process.argv)
